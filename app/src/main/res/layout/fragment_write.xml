<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.tama.studentcardsample.WriteNfcfFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/status_text"
            android:textSize="20dp"
            android:text="status" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preview_text"
            android:textSize="15dp"
            android:lineSpacingMultiplier="0.75"
            android:fontFamily="@font/cour"
            android:text="" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="206dp"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLength="160"
            android:maxLines="10"/>


        <RadioGroup android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/RadioGroup">
            <RadioButton android:text="EditText"
                android:id="@+id/rd_editText"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
            </RadioButton>
            <RadioButton android:text="Duckling"
                android:id="@+id/rd_duckling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton android:text="Plane"
                android:id="@+id/rd_plane"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
            <RadioButton android:text="fablab?"
                android:id="@+id/rd_fablab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </RadioButton>
        </RadioGroup>

    </LinearLayout>
</FrameLayout>